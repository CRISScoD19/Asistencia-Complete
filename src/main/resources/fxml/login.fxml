<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="pe.edu.upeu.asistencia.controller.LoginController"
            prefWidth="400" prefHeight="300">
    <VBox alignment="CENTER" spacing="15" prefWidth="400" prefHeight="300">
        <Label text="Sistema de Asistencia"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="usernameField" promptText="Usuario" prefWidth="200"/>
        <PasswordField fx:id="passwordField" promptText="Contraseña" prefWidth="200"/>

       <Button text="Iniciar Sesión" onAction="#login" prefWidth="200"/>

        <Label fx:id="lblError" textFill="red"/>
    </VBox>
</AnchorPane>
