<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pe.edu.upeu.asistencia.controller.LoginController"
      style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);">
    <padding>
        <Insets top="50" right="40" bottom="50" left="40"/>
    </padding>

    <!-- Panel de Login -->
    <VBox alignment="CENTER" spacing="25" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <!-- Logo/Título -->
        <VBox alignment="CENTER" spacing="5">
            <Label text="" style="-fx-font-size: 48px;"/>
            <Label text="Sistema de Asistencia" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
            <Label text="Ingrese sus credenciales" style="-fx-font-size: 14px; -fx-text-fill: #718096;"/>
        </VBox>

        <!-- Campos de Login -->
        <VBox spacing="15" prefWidth="280">
            <!-- Usuario -->
            <VBox spacing="5">
                <Label text="Usuario" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
                <TextField fx:id="txtUsername" promptText="Ingrese su usuario"
                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10;"/>
            </VBox>

            <!-- Contraseña -->
            <VBox spacing="5">
                <Label text="Contraseña" style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
                <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña"
                              style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10;"/>
            </VBox>

            <!-- Mensaje de Error -->
            <Label fx:id="lblError" text="Error" visible="false"
                   style="-fx-text-fill: #e53e3e; -fx-font-size: 12px; -fx-padding: 5 0 0 0;"/>
        </VBox>

        <!-- Botón Ingresar -->
        <Button fx:id="btnLogin" text="Ingresar" onAction="#handleLogin"
                prefWidth="280" prefHeight="45"
                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;">
            <font>
                <Font name="System Bold" size="16"/>
            </font>
        </Button>

        <!-- Info -->
        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 15 0 0 0;">
            <Label text="Usuarios de prueba:" style="-fx-font-size: 11px; -fx-text-fill: #a0aec0;"/>
            <Label text="admin / admin123" style="-fx-font-size: 10px; -fx-text-fill: #cbd5e0;"/>
            <Label text="empleado1 / emp123" style="-fx-font-size: 10px; -fx-text-fill: #cbd5e0;"/>
        </VBox>
    </VBox>
</VBox>