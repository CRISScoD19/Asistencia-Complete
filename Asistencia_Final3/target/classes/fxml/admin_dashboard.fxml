<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.asistencia.controller.AdminDashboardController"
            style="-fx-background-color: #f7fafc;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #667eea; -fx-padding: 15;">
            <Label text="Panel de AdministraciÃ³n" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Cerrar Sesion" onAction="#handleCerrarSesion"
                    style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Usuarios">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <HBox spacing="10">
                        <Button text="Nuevo Usuario" onAction="#handleNuevoUsuario"/>
                        <Button text="Editar" onAction="#handleEditarUsuario"/>
                        <Button text="Eliminar" onAction="#handleEliminarUsuario"/>
                    </HBox>
                    <TableView fx:id="tblUsuarios" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                            <TableColumn fx:id="colUsername" text="Usuario" prefWidth="150"/>
                            <TableColumn fx:id="colRol" text="Rol" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Dashboard">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <HBox spacing="10">
                        <Label text="Resumen de Asistencias"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <ComboBox fx:id="cboPeriodoDashboard" prefWidth="150"/>
                        <Button text="Filtrar" onAction="#handleFiltrarDashboard"/>
                        <Button text="Actualizar" onAction="#handleActualizarDashboard"/>
                    </HBox>
                    <TableView fx:id="tableDashboardAsistencias" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colDashEmpleado" text="Empleado" prefWidth="200"/>
                            <TableColumn fx:id="colDashPresente" text="Presente" prefWidth="100"/>
                            <TableColumn fx:id="colDashTarde" text="Tarde" prefWidth="100"/>
                            <TableColumn fx:id="colDashAusente" text="Ausente" prefWidth="100"/>
                            <TableColumn fx:id="colDashJustificado" text="Justificado" prefWidth="100"/>
                            <TableColumn fx:id="colDashTotal" text="Total" prefWidth="80"/>
                            <TableColumn fx:id="colDashPorcentaje" text="Porcentaje" prefWidth="120"/>
                        </columns>
                    </TableView>
                    <HBox spacing="20">
                        <Label text="Total Empleados:"/>
                        <Label fx:id="lblTotalEmpleados" text="0"/>
                        <Label text="Promedio:"/>
                        <Label fx:id="lblPromedioAsistencia" text="0"/>
                        <Label text="Total Registros:"/>
                        <Label fx:id="lblTotalRegistros" text="0"/>
                    </HBox>
                </VBox>
            </Tab>

            <Tab text="Asistencias">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <HBox spacing="10">
                        <Button text="Registrar" onAction="#handleRegistrarAsistencia"/>
                        <Button text="Eliminar" onAction="#handleEliminarAsistencia"/>
                    </HBox>
                    <TableView fx:id="tblAsistencias" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colAsistenciaId" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="colEmpleado" text="Empleado" prefWidth="180"/>
                            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                            <TableColumn fx:id="colHoraEntrada" text="Entrada" prefWidth="100"/>
                            <TableColumn fx:id="colHoraSalida" text="Salida" prefWidth="100"/>
                            <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Mensajes">
                <BorderPane>
                    <top>
                        <HBox spacing="10" style="-fx-padding: 15;">
                            <Button text="Nuevo Mensaje" onAction="#handleNuevoMensaje"/>
                            <Button text="Eliminar" onAction="#handleEliminarMensaje"/>
                        </HBox>
                    </top>
                    <center>
                        <SplitPane dividerPositions="0.6">
                            <TableView fx:id="tblMensajes">
                                <columns>
                                    <TableColumn fx:id="colMensajeEmisor" text="De" prefWidth="120"/>
                                    <TableColumn fx:id="colMensajeReceptor" text="Para" prefWidth="120"/>
                                    <TableColumn fx:id="colAsunto" text="Asunto" prefWidth="200"/>
                                    <TableColumn fx:id="colFechaEnvio" text="Fecha" prefWidth="120"/>
                                </columns>
                            </TableView>
                            <VBox spacing="10" style="-fx-padding: 15;">
                                <Label text="Contenido del Mensaje"/>
                                <TextArea fx:id="txtContenidoMensaje" editable="false" VBox.vgrow="ALWAYS"/>
                            </VBox>
                        </SplitPane>
                    </center>
                </BorderPane>
            </Tab>

            <Tab text="Vacaciones">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <HBox spacing="10">
                        <Label text="Solicitudes de Vacaciones"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Actualizar" onAction="#handleActualizarVacaciones"/>
                    </HBox>
                    <TableView fx:id="tblSolicitudesVacacion" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colVacEmpleado" text="Empleado" prefWidth="150"/>
                            <TableColumn fx:id="colVacFechaInicio" text="Inicio" prefWidth="100"/>
                            <TableColumn fx:id="colVacFechaFin" text="Fin" prefWidth="100"/>
                            <TableColumn fx:id="colVacDias" text="Dias" prefWidth="60"/>
                            <TableColumn fx:id="colVacMotivo" text="Motivo" prefWidth="200"/>
                            <TableColumn fx:id="colVacEstado" text="Estado" prefWidth="120"/>
                            <TableColumn fx:id="colVacFechaSolicitud" text="Solicitud" prefWidth="150"/>
                        </columns>
                    </TableView>
                    <HBox spacing="10">
                        <Button text="Aprobar" onAction="#handleAprobarVacacion"/>
                        <Button text="Rechazar" onAction="#handleRechazarVacacion"/>
                        <Button text="Ver Detalle" onAction="#handleVerDetalleVacacion"/>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Sistema de Asistencia v1.0"/>
        </HBox>
    </bottom>
</BorderPane>