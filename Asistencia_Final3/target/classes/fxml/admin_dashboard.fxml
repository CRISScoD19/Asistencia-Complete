<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.asistencia.controller.AdminDashboardController"
            style="-fx-background-color: #f7fafc;">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #667eea; -fx-padding: 15;">
            <Label text="Panel de Administración" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Cerrar Sesion" onAction="#handleCerrarSesion"
                    style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Content -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: white;">

            <!-- TAB USUARIOS -->
            <Tab text="Usuarios">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <!-- BARRA DE BÚSQUEDA -->
                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #e6f2ff; -fx-padding: 10; -fx-background-radius: 5;">
                        <Label text="Buscar:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtBuscarUsuario" promptText="Buscar por nombre o usuario..."
                                   prefWidth="300" style="-fx-background-radius: 5;"/>
                        <Label text="" style="-fx-font-size: 10px; -fx-text-fill: #667eea;"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text="Nuevo Usuario" onAction="#handleNuevoUsuario"
                                style="-fx-background-color: #48bb78; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                        <Button text="Editar" onAction="#handleEditarUsuario"
                                style="-fx-background-color: #4299e1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                        <Button text="Eliminar" onAction="#handleEliminarUsuario"
                                style="-fx-background-color: #f56565; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                    </HBox>

                    <TableView fx:id="tblUsuarios" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="colNombre" text="Nombre Completo" prefWidth="200"/>
                            <TableColumn fx:id="colUsername" text="Usuario" prefWidth="150"/>
                            <TableColumn fx:id="colRol" text="Rol" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- TAB DASHBOARD -->
            <Tab text="Resumen">
                <VBox spacing="15.0">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Resumen de Asistencias por Empleado">
                            <font>
                                <Font name="System Bold" size="16.0"/>
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="Período:"/>
                        <ComboBox fx:id="cboPeriodoDashboard" prefWidth="150"/>
                        <Button text="Filtrar" onAction="#handleFiltrarDashboard"/>
                        <Button text="Actualizar" onAction="#handleActualizarDashboard"/>
                    </HBox>

                    <!-- BARRA DE BÚSQUEDA DASHBOARD -->
                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #e6f2ff; -fx-padding: 10; -fx-background-radius: 5;">
                        <Label text="Buscar empleado:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtBuscarDashboard" promptText=""
                                   prefWidth="300" style="-fx-background-radius: 5;"/>
                    </HBox>

                    <TableView fx:id="tableDashboardAsistencias" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colDashEmpleado" text="Empleado" prefWidth="200"/>
                            <TableColumn fx:id="colDashPresente" text="Presente" prefWidth="100"/>
                            <TableColumn fx:id="colDashTarde" text="Tarde" prefWidth="100"/>
                            <TableColumn fx:id="colDashAusente" text="Ausente" prefWidth="100"/>
                            <TableColumn fx:id="colDashJustificado" text="Justificado" prefWidth="100"/>
                            <TableColumn fx:id="colDashTotal" text="Total" prefWidth="80"/>
                            <TableColumn fx:id="colDashPorcentaje" text="Porcentaje" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <HBox spacing="20" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5;">
                        <VBox spacing="5" alignment="CENTER">
                            <Label text="Total Empleados" styleClass="label-bold"/>
                            <Label fx:id="lblTotalEmpleados" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                        </VBox>
                        <Separator orientation="VERTICAL"/>
                        <VBox spacing="5" alignment="CENTER">
                            <Label text="Promedio Asistencia" styleClass="label-bold"/>
                            <Label fx:id="lblPromedioAsistencia" text="0"
                                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                        </VBox>
                        <Separator orientation="VERTICAL"/>
                        <VBox spacing="5" alignment="CENTER">
                            <Label text="Total Registros" styleClass="label-bold"/>
                            <Label fx:id="lblTotalRegistros" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                        </VBox>
                    </HBox>


                </VBox>
            </Tab>

            <!-- TAB ASISTENCIAS -->
            <Tab text="Asistencias">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <!-- BARRA DE BÚSQUEDA ASISTENCIAS -->
                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #e6f2ff; -fx-padding: 10; -fx-background-radius: 5;">
                        <Label text="Buscar empleado:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtBuscarAsistencia" promptText="Buscar por nombre del empleado..."
                                   prefWidth="300" style="-fx-background-radius: 5;"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text="Registrar Asistencia" onAction="#handleRegistrarAsistencia"
                                style="-fx-background-color: #48bb78; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                        <Button text="Eliminar" onAction="#handleEliminarAsistencia"
                                style="-fx-background-color: #f56565; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                    </HBox>

                    <TableView fx:id="tblAsistencias" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colAsistenciaId" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="colEmpleado" text="Empleado" prefWidth="180"/>
                            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                            <TableColumn fx:id="colHoraEntrada" text="Hora Entrada" prefWidth="100"/>
                            <TableColumn fx:id="colHoraSalida" text="Hora Salida" prefWidth="100"/>
                            <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- TAB MENSAJES -->
            <Tab text="Mensajes">
                <BorderPane>
                    <top>
                        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 15;">
                            <Button text="Nuevo Mensaje" onAction="#handleNuevoMensaje"
                                    style="-fx-background-color: #48bb78; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                            <Button text="Eliminar" onAction="#handleEliminarMensaje"
                                    style="-fx-background-color: #f56565; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                        </HBox>
                    </top>

                    <center>
                        <SplitPane dividerPositions="0.6" style="-fx-padding: 0 15 15 15;">
                            <TableView fx:id="tblMensajes">
                                <columns>
                                    <TableColumn fx:id="colMensajeEmisor" text="De" prefWidth="120"/>
                                    <TableColumn fx:id="colMensajeReceptor" text="Para" prefWidth="120"/>
                                    <TableColumn fx:id="colAsunto" text="Asunto" prefWidth="200"/>
                                    <TableColumn fx:id="colFechaEnvio" text="Fecha" prefWidth="120"/>
                                </columns>
                            </TableView>

                            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f7fafc; -fx-background-radius: 5;">
                                <Label text="Contenido del Mensaje" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                                <TextArea fx:id="txtContenidoMensaje" editable="false" wrapText="true" VBox.vgrow="ALWAYS"
                                          promptText=""
                                          style="-fx-background-color: white; -fx-border-color: #cbd5e0; -fx-border-width: 2; -fx-border-radius: 5; -fx-font-size: 13px;"/>

                            </VBox>
                        </SplitPane>
                    </center>
                </BorderPane>
            </Tab>

            <!-- TAB VACACIONES -->
            <Tab text="Vacaciones">
                <VBox spacing="15.0">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Gestión de Solicitudes de Vacaciones">
                            <font>
                                <Font name="System Bold" size="16.0"/>
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Actualizar" onAction="#handleActualizarVacaciones"/>
                    </HBox>

                    <TableView fx:id="tblSolicitudesVacacion" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colVacEmpleado" text="Empleado" prefWidth="150"/>
                            <TableColumn fx:id="colVacFechaInicio" text="Fecha Inicio" prefWidth="100"/>
                            <TableColumn fx:id="colVacFechaFin" text="Fecha Fin" prefWidth="100"/>
                            <TableColumn fx:id="colVacDias" text="Días" prefWidth="60"/>
                            <TableColumn fx:id="colVacMotivo" text="Motivo" prefWidth="200"/>
                            <TableColumn fx:id="colVacEstado" text="Estado" prefWidth="120"/>
                            <TableColumn fx:id="colVacFechaSolicitud" text="Fecha Solicitud" prefWidth="150"/>
                        </columns>
                    </TableView>

                    <HBox spacing="10.0">
                        <Button fx:id="btnAprobarVacacion" text="Aprobar" onAction="#handleAprobarVacacion"
                                style="-fx-background-color: #48bb78; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="120"/>
                        <Button fx:id="btnRechazarVacacion" text="Rechazar" onAction="#handleRechazarVacacion"
                                style="-fx-background-color: #f56565; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="120"/>
                        <Button text="Ver Detalle" onAction="#handleVerDetalleVacacion" prefWidth="120"/>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #edf2f7; -fx-padding: 10;">
            <Label text="Sistema de Asistencia v1.0" style="-fx-text-fill: #718096; -fx-font-size: 11px;"/>
        </HBox>
    </bottom>
</BorderPane>