<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pe.edu.upeu.asistencia.controller.UsuarioFormController"
      style="-fx-padding: 25; -fx-background-color: #f7fafc;">

    <!-- Título -->
    <Label text="Formulario de Usuario" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
    <Separator/>

    <!-- Campos del Formulario -->
    <GridPane hgap="15" vgap="15">
        <!-- Nombre -->
        <Label text="Nombre Completo:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
        <TextField fx:id="txtNombre" promptText="Ej: Juan Pérez" GridPane.columnIndex="1" GridPane.rowIndex="0"
                  prefWidth="250" style="-fx-background-radius: 5; -fx-border-radius: 5;"/>

        <!-- Username -->
        <Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
        <TextField fx:id="txtUsername" promptText="Ej: jperez" GridPane.columnIndex="1" GridPane.rowIndex="1"
                  prefWidth="250" style="-fx-background-radius: 5; -fx-border-radius: 5;"/>

        <!-- Contraseña -->
        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
        <PasswordField fx:id="txtPassword" promptText="Mínimo 6 caracteres" GridPane.columnIndex="1" GridPane.rowIndex="2"
                      prefWidth="250" style="-fx-background-radius: 5; -fx-border-radius: 5;"/>

        <!-- Rol -->
        <Label text="Rol:" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
        <ComboBox fx:id="cmbRol" GridPane.columnIndex="1" GridPane.rowIndex="3"
                 prefWidth="250" style="-fx-background-radius: 5;"/>

        <!-- Activo -->
        <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="4"
               style="-fx-font-weight: bold; -fx-text-fill: #4a5568;"/>
        <CheckBox fx:id="chkActivo" text="Usuario Activo" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <!-- Botones -->
    <Separator/>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnGuardar" text="💾 Guardar" onAction="#handleGuardar"
                style="-fx-background-color: #48bb78; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30; -fx-background-radius: 5; -fx-cursor: hand;"/>
        <Button fx:id="btnCancelar" text="❌ Cancelar" onAction="#handleCancelar"
                style="-fx-background-color: #cbd5e0; -fx-text-fill: #2d3748; -fx-font-weight: bold; -fx-padding: 10 30; -fx-background-radius: 5; -fx-cursor: hand;"/>
    </HBox>
</VBox>