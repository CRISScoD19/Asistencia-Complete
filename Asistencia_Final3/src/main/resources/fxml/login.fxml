<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.asistencia.controller.LoginController">
    <padding>
        <Insets bottom="50" left="40" right="40" top="50" />
    </padding>

    <!-- Panel de Login -->
    <VBox alignment="CENTER" spacing="25" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">
        <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
        </padding>

        <!-- Logo/Título -->
        <VBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size: 48px;" text="" />
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #667eea;" text="Sistema de Asistencia" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: #718096;" text="Ingrese sus credenciales" />
        </VBox>

        <!-- Campos de Login -->
        <VBox prefWidth="280" spacing="15">
            <!-- Usuario -->
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #4a5568;" text="Usuario" />
                <TextField fx:id="txtUsername" promptText="Ingrese su usuario" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10;" />
            </VBox>

            <!-- Contraseña -->
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #4a5568;" text="Contraseña" />
                <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10;" />
            </VBox>

            <!-- Mensaje de Error -->
            <Label fx:id="lblError" style="-fx-text-fill: #e53e3e; -fx-font-size: 12px; -fx-padding: 5 0 0 0;" text="Error" visible="false" />
        </VBox>

        <!-- Botón Ingresar -->
        <Button fx:id="btnLogin" onAction="#handleLogin" prefHeight="45" prefWidth="280" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Ingresar">
            <font>
                <Font name="System Bold" size="16" />
            </font>
        </Button>

        <!-- Info -->
        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 15 0 0 0;">
            <Label style="-fx-font-size: 11px; -fx-text-fill: #a0aec0;" text="Cristian Enterprice" />
        </VBox>
    </VBox>
</VBox>
