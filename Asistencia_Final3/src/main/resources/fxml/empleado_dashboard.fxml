                <Button text="ðŸšª Cerrar SesiÃ³n" onAction="#handleCerrarSesion"
                        style="-fx-background-color: white; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Content -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- Marcar Asistencia -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
