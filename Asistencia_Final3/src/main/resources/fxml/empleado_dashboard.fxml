                                <TableColumn fx:id="colHoraEntrada" text="Hora Entrada" prefWidth="120"/>
                                <TableColumn fx:id="colHoraSalida" text="Hora Salida" prefWidth="120"/>
                                <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>

                <!-- TAB MENSAJES -->
                <Tab text="âœ‰ï¸ Mensajes">
