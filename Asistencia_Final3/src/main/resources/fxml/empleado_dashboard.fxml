                                    <Label text="Contenido del Mensaje" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                                    <TextArea fx:id="txtMensajeContenido" editable="false" wrapText="true" VBox.vgrow="ALWAYS"
                                             style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 5;"/>
                                </VBox>
                            </SplitPane>
                        </center>
                    </BorderPane>
